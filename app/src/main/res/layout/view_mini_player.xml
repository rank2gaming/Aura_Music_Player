<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mini_player_bg"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:elevation="8dp">

    <ImageView
        android:id="@+id/img_mini_art"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_music_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.rank2gaming.aura.ui.AuraVisualizerView
        android:id="@+id/visualizer_mini_art"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="@id/img_mini_art"
        app:layout_constraintEnd_toEndOf="@id/img_mini_art"
        app:layout_constraintTop_toTopOf="@id/img_mini_art"
        app:layout_constraintBottom_toBottomOf="@id/img_mini_art"
        android:translationZ="-1dp"/>

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        app:layout_constraintStart_toEndOf="@id/img_mini_art"
        app:layout_constraintEnd_toStartOf="@id/visualizer_mini_btn_container"
        app:layout_constraintTop_toTopOf="@id/img_mini_art"
        app:layout_constraintBottom_toBottomOf="@id/img_mini_art">

        <TextView
            android:id="@+id/txt_mini_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/txt_mini_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textColor="#CCC"
            android:textSize="12sp"
            android:singleLine="true"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/visualizer_mini_btn_container"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_mini_art"
        app:layout_constraintBottom_toBottomOf="@id/img_mini_art">

        <com.rank2gaming.aura.ui.AuraVisualizerView
            android:id="@+id/visualizer_mini_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/btn_mini_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_play"
            android:padding="8dp"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/btnMiniPrev"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_skip_previous"
        app:tint="#FFFFFF"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/img_mini_art"
        app:layout_constraintEnd_toStartOf="@id/visualizer_mini_btn_container"
        app:layout_constraintHorizontal_bias="0.8"/>

    <ImageView
        android:id="@+id/btnMiniNext"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_skip_next"
        app:tint="#FFFFFF"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/img_mini_art"
        app:layout_constraintStart_toEndOf="@id/visualizer_mini_btn_container"
        app:layout_constraintHorizontal_bias="0.2"/>

    <SeekBar
        android:id="@+id/miniSeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:progressTint="#FF0000"
        android:thumbTint="#FF0000"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnMiniPrev"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>