<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_player_vibrant">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_keyboard_arrow_down"
        app:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | Lyrics "
            android:textColor="#E0E0E0"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_check"
            app:tint="#E0E0E0"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_more"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_more_vert"
        app:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <ImageView
        android:id="@+id/themeswitchable"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_shirt"
        app:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toStartOf="@+id/btn_more"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_album_art"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.8"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#20FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/txt_title_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/img_album_art_big"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_music_note"
            app:tint="#FFFFFF"
            android:layout_gravity="center"
            android:alpha="0.8"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txt_title_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Over the Horizon"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_artist_big"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_artist_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello Talk"
        android:textColor="#E0E0E0"
        android:textSize="16sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/actionsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/actionsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/seekContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/btn_favorite"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_favorite"
            app:tint="#FFFFFF"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_add_box"
            app:tint="#FFFFFF"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btn_equalizer"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_tune"
            app:tint="#FFFFFF"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btn_timer"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_alarm"
            app:tint="#FFFFFF"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btn_queue"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_playlist_play"
            app:tint="#FFFFFF"
            android:layout_weight="1"/>

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/seekContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/controlsRow">

        <ImageView
            android:id="@+id/btnReplay10"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_replay_10"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/btnForward10"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_forward_10"
            app:tint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/progressBg"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#40FFFFFF"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintStart_toEndOf="@+id/btnReplay10"
            app:layout_constraintEnd_toStartOf="@+id/btnForward10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/progressActive"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/progressBg"
            app:layout_constraintEnd_toStartOf="@+id/timeCapsule"
            app:layout_constraintTop_toTopOf="@+id/progressBg"
            app:layout_constraintBottom_toBottomOf="@+id/progressBg"/>

        <TextView
            android:id="@+id/timeCapsule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_time_capsule"
            android:text="1:16/3:54"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:elevation="4dp"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="@+id/progressBg"
            app:layout_constraintEnd_toEndOf="@+id/progressBg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/controlsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/adViewFooter">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_shuffle"
            app:tint="#FFFFFF"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_skip_previous"
            app:tint="#FFFFFF"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/bg_play_glass"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/btn_play_pause"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_play"
                app:tint="#FFFFFF"
                android:layout_gravity="center"/>
        </FrameLayout>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_skip_next"
            app:tint="#FFFFFF"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_repeat"
            app:tint="#FFFFFF"
            android:layout_weight="1" />

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>